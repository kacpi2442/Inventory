{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug telegram bot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/telegram_inventory.py",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Flask debug",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "run",
                "--debug"
            ]
        },
        {
            "name": "Flask debug (listen on all interfaces)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "run",
                "--debug",
                "--host=0.0.0.0"
            ]
        },
    ]
}