{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "My Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debug"
            ],
            "jinja": true
        }
    ]
}