{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "app.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Flask debug",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "run",
                "--debug"
            ]
        },
    ]
}